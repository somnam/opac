[loggers]
keys = root, src, sqlalchemy, tornado, rq

[handlers]
keys = console

[formatters]
keys = generic

[logger_root]
level = INFO
handlers = console
qualname =

[logger_src]
level = INFO
handlers =
qualname = src

[logger_sqlalchemy]
level = WARN
handlers =
qualname = sqlalchemy.engine
; "level = INFO" logs SQL queries.
; "level = DEBUG" logs SQL queries and results.
; "level = WARN" logs neither.  (Recommended for production systems.)

[logger_tornado]
level = INFO
handlers =
qualname = tornado

[logger_rq]
level = INFO
handlers =
qualname = rq

[handler_console]
class = logging.StreamHandler
formatter = generic
args = (sys.stderr,)

[formatter_generic]
format = %(asctime)-15s %(levelname)-5.5s [%(filename)s:%(lineno)s] [%(funcName)s] %(message)s
class = logging.Formatter